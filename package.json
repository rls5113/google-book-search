{
  "name": "mern",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.4",
    "mixin-deep": "2.0.1",
    "yargs-parser": "13.1.2",
    "dot-prop": "6.0.1",
    "lodash": "4.17.21",
    "minimist": "1.2.5",
    "kind-of": "6.0.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.7.5",
    "mquery": "^3.2.3",
    "path": "^0.12.7",
    "set-value":"^0.4.3"
  }
}
